---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import { Content as FeatureMatrixContent } from '../content/feature-matrix.md';
---

<Layout title="Feature Matrix - Functype">
  <Navigation client:load />
  <div class="min-h-screen bg-white pt-16">
    <!-- Hero Section -->
    <section class="px-6 py-20 text-center max-w-6xl mx-auto">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Feature Matrix</h1>
      <p class="text-2xl text-gray-600 mb-4">Complete overview of data structures and interfaces</p>
      <p class="text-lg text-gray-500 max-w-2xl mx-auto mb-8">
        Explore which functional programming interfaces are supported by each data structure in functype
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/" class="px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
          ‚Üê Back to Home
        </a>
        <a href="https://github.com/jordanburke/functype" target="_blank" rel="noopener noreferrer" class="px-6 py-3 bg-white text-blue-600 border-2 border-blue-600 rounded-lg hover:bg-blue-50 transition-colors">
          View on GitHub
        </a>
      </div>
    </section>

    <!-- Feature Matrix Content -->
    <section class="px-6 py-16">
      <div class="max-w-7xl mx-auto">
        <div class="prose prose-lg max-w-none markdown-content">
          <FeatureMatrixContent />
        </div>
      </div>
    </section>

    <Footer client:load />
  </div>
</Layout>

<style>
  /* Scoped styles for markdown content */
  .markdown-content {
    color: #1f2937;
  }

  .markdown-content :global(h1) {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
    margin-top: 2rem;
  }

  .markdown-content :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
    margin-top: 3rem;
  }

  .markdown-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    margin-top: 2rem;
  }

  .markdown-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .markdown-content :global(ul) {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul > li + li) {
    margin-top: 0.5rem;
  }

  .markdown-content :global(li) {
    margin-left: 1rem;
  }

  .markdown-content :global(code) {
    background-color: #f3f4f6;
    font-size: 0.875rem;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-family: ui-monospace, monospace;
    color: #1f2937;
  }

  /* Table styles */
  .markdown-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 2rem;
    font-size: 0.875rem;
    display: block;
    overflow-x: auto;
  }

  .markdown-content :global(thead) {
    background-color: #f3f4f6;
    position: sticky;
    top: 0;
  }

  .markdown-content :global(th) {
    border: 1px solid #d1d5db;
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    color: #111827;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .markdown-content :global(td) {
    border: 1px solid #d1d5db;
    padding: 0.75rem 1rem;
    text-align: center;
  }

  .markdown-content :global(tbody tr:nth-child(even)) {
    background-color: #f9fafb;
  }

  .markdown-content :global(tbody tr:hover) {
    background-color: #eff6ff;
    transition: background-color 0.2s;
  }

  /* First column (data structure names) styling */
  .markdown-content :global(tbody td:first-child) {
    font-weight: 600;
    text-align: left;
    background-color: white;
  }

  .markdown-content :global(tbody tr:hover td:first-child) {
    background-color: #eff6ff;
  }

  /* Responsive table wrapper */
  @media (max-width: 768px) {
    .markdown-content :global(table) {
      font-size: 0.75rem;
    }

    .markdown-content :global(th),
    .markdown-content :global(td) {
      padding: 0.5rem;
    }
  }
</style>
